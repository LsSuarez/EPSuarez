@model Parcial_.Models.Jugadores

@{
    ViewBag.Title = "Crear Jugador";
}

<h1>Crear Jugador</h1>

<form method="post" asp-action="Guardar">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="Nombre" required />
        <span class="text-danger" asp-validation-for="Nombre"></span>
    </div>
    <div class="form-group mt-2">
        <label for="edad">Edad</label>
        <input type="number" class="form-control" id="edad" name="Edad" required />
        <span class="text-danger" asp-validation-for="Edad"></span>
    </div>
    <div class="form-group mt-2">
        <label for="posicion">Posici√≥n</label>
        <input type="text" class="form-control" id="posicion" name="Posicion" required />
        <span class="text-danger" asp-validation-for="Posicion"></span>
    </div>
    <div class="form-group mt-2">
        <label for="equipo">Equipo Actual</label>
        <select class="form-control" id="equipo" name="EquipoId" required>
            <option value="">Seleccione un equipo</option>
            @foreach (var equipo in ViewBag.Equipos)
            {
                <option value="@equipo.Id">@equipo.Nombre</option>
            }
        </select>
        <span class="text-danger" asp-validation-for="EquipoId"></span>
    </div>
    
    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
</form>

<h1>@ViewData["Mensaje"]</h1>